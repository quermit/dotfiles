set nocompatible

" pathogen
runtime! autoload/pathogen.vim
silent! call pathogen#helptags()
silent! call pathogen#runtime_append_all_bundles()

" general
syntax on
scriptencoding utf-8
filetype plugin on
set mouse=a
set history=1000
set backspace=indent,eol,start
set noerrorbells
set spell

" UI
set background=dark
set t_Co=256
let g:solarized_termcolors=256
colorscheme solarized

set ruler
set showcmd
set showmatch
set incsearch
set hlsearch
set ignorecase
set statusline=%F%m%r%h%w\ [TYPE=%Y]\ [HEX=\%02.2B]\ [POS=%04l,%04v][%p%%]\ [LEN=%L]
set laststatus=2
set cursorline
set number
set scrolljump=5
set scrolloff=3
set list
set listchars=tab:>.,trail:.,extends:#,nbsp:.

" formatting
set nowrap
set autoindent
set smartindent
set shiftwidth=4
set expandtab
set tabstop=4
set softtabstop=4
set pastetoggle=<F12>

